version: "3.7"
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
      target: dev-app
    # You can run "manage.py dev_socket_mode" for development.
    command: poetry run /code/manage.py runserver 0.0.0.0:8000  # http://localhost:8000
    volumes:
      - ./src:/code
      - ./pyproject.toml:/code/pyproject.toml
      - ./poetry.lock:/code/poetry.lock
    ports:
      - '8000:8000'
    env_file:
      - .env
    environment:
      - DJANGO_DEBUG=True
      - DJANGO_ALLOWED_HOST=localhost
      - DJANGO_DATABASE_ENGINE=django.db.backends.sqlite3
      - DJANGO_SECRET_KEY=development
